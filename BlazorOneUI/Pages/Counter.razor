@page "/counter"
@using BlazorOneUI.Shared.Components

<h1>Counter</h1>

<p>Current count: @currentCount</p>

<div class="row">
    <div class="col-md-3">
        <KPI Text="Contador" Value="@currentCount.ToString()" />
    </div>
</div>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>

@code {
    int currentCount = 0;

    void IncrementCount()
    {
        currentCount++;
    }
}
